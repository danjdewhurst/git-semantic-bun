{
  "name": "git-semantic-bun",
  "version": "0.5.0",
  "description": "Local semantic git commit search CLI built with Bun + TypeScript",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./plugin": "./src/plugin-export.ts"
  },
  "bin": {
    "gsb": "./src/cli.ts"
  },
  "files": ["src/", "LICENSE", "README.md"],
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir dist --target bun",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx @biomejs/biome check .",
    "toc": "bash ./scripts/toc.sh",
    "perf:ci": "bun run scripts/perf-ci.ts --baseline .github/perf-baseline.json --output perf-artifacts/perf-snapshot.json",
    "perf:baseline": "bun run scripts/perf-ci.ts --write-baseline --baseline .github/perf-baseline.json --output perf-artifacts/perf-snapshot.json",
    "prepublishOnly": "bun run typecheck && bun test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danjdewhurst/git-semantic-bun.git"
  },
  "homepage": "https://github.com/danjdewhurst/git-semantic-bun#readme",
  "bugs": {
    "url": "https://github.com/danjdewhurst/git-semantic-bun/issues"
  },
  "keywords": [
    "git",
    "semantic-search",
    "commit-search",
    "bun",
    "cli",
    "embeddings",
    "vector-search"
  ],
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.5",
    "typescript": "^5.7.3"
  },
  "optionalDependencies": {
    "usearch": "^2.16.0"
  },
  "engines": {
    "bun": ">=1.3.9"
  },
  "license": "MIT"
}
